---
import "./src/styles/global.css";
import CardInput from "../components/CardInput.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Card Preview Layout</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
                darkMode: "class",
            };
        </script>
    </head>
    <body class="bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-100">
        <!-- Navbar -->
        <nav class="navbar bg-white shadow-md dark:bg-gray-800">
            <div
                class="container flex items-center justify-between py-4 mx-auto"
            >
                <div class="text-lg font-bold">Navbar</div>
                <button
                    id="themeToggle"
                    class="px-4 py-2 text-sm font-medium bg-gray-200 rounded dark:bg-gray-700 dark:text-gray-300"
                >
                    Toggle Theme
                </button>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container mx-auto mt-6">
            <div class="flex flex-col-reverse lg:flex-row gap-6">
                <!-- Input Section -->
                <CardInput />

                <!-- Card Preview Section -->
                <div
                    class="w-full lg:w-2/3 bg-white p-6 rounded-lg shadow-md dark:bg-gray-800"
                >
                    <h2 class="text-2xl font-semibold mb-4">Card Preview</h2>
                    <div
                        class="border rounded-lg p-4 bg-gray-50 h-72 flex items-center justify-center dark:bg-gray-700"
                    >
                        <span class="text-gray-400 dark:text-gray-300"
                            >Card Preview Placeholder</span
                        >
                    </div>
                </div>
            </div>
        </div>

        <script>
            const themeToggle = document.getElementById("themeToggle");
            themeToggle.addEventListener("click", () => {
                document.documentElement.classList.toggle("dark");
                localStorage.setItem(
                    "theme",
                    document.documentElement.classList.contains("dark")
                        ? "dark"
                        : "light",
                );
            });

            // Load theme from local storage
            if (localStorage.getItem("theme") === "dark") {
                document.documentElement.classList.add("dark");
            }
        </script>
    </body>
</html>

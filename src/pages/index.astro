---
import "/src/styles/global.css";
import CardInput from "../components/CardInput.tsx";
import Card3D from "../components/Card3D.tsx";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Card Preview Layout</title>
        <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    </head>
    <body class="bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-100">
        <!-- Navbar -->
        <nav class="navbar bg-white shadow-md dark:bg-gray-800">
            <div
                class="container flex items-center justify-between py-4 mx-auto"
            >
                <div class="text-lg font-bold">Tpotmon Creator</div>
                <button
                    id="themeToggle"
                    class="px-4 py-2 text-sm font-medium bg-gray-200 rounded dark:bg-gray-700 dark:text-gray-300"
                >
                    Toggle Theme
                </button>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container mx-auto mt-6">
            <div class="flex flex-col-reverse lg:flex-row gap-6">
                <!-- Input Section -->
                <CardInput client:only="react" />

                <!-- Card Preview Section -->
                <main
                    class="w-full bg-white p-6 rounded-lg shadow-md dark:bg-gray-800"
                >
                    <Card3D client:only="react" />
                </main>
            </div>
        </div>
    </body>
</html>

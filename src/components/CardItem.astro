---
// Define props with TypeScript interface
interface Props {
    id: number;
    title: string;
    description: string;
}

// Destructure props
const { id, title, description } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow dark:bg-gray-800">
    <div class="aspect-w-3 aspect-h-4 bg-gray-200 dark:bg-gray-700">
        <!-- Placeholder for card image -->
        <div class="flex items-center justify-center h-48 text-gray-500 dark:text-gray-400">
            Card {id} Image
        </div>
    </div>
    <div class="p-4">
        <h3 class="text-lg font-semibold mb-2">{title}</h3>
        <p class="text-gray-600 dark:text-gray-300">{description}</p>
    </div>
</div>
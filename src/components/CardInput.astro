<div class="w-full lg:w-1/3 bg-white p-6 rounded-lg shadow-md dark:bg-gray-800">
    <h2 class="text-2xl font-semibold mb-4">Card Inputs</h2>

    <!-- Username -->
    <div class="mb-4">
        <label class="block text-sm font-medium mb-2">Username</label>
        <div class="flex">
            <input
                type="text"
                placeholder="Enter username"
                class="w-full px-4 py-2 border rounded-l-lg focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
            />
            <button
                class="px-4 py-2 bg-blue-500 text-white rounded-r-lg hover:bg-blue-600 focus:outline-none"
                onclick="fetchProfile()"
            >
                Fetch Profile
            </button>
        </div>
    </div>

    <!-- Title -->
    <div class="mb-4">
        <label class="block text-sm font-medium mb-2">Title</label>
        <input
            type="text"
            placeholder="Enter a humorous title"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
        />
    </div>

    <!-- Ability Selection -->
    <div id="abilities-section" class="mb-4">
        <label class="block text-sm font-medium mb-2">Abilities</label>
        <div class="space-y-4">
            <div>
                <select
                    class="w-full px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
                >
                    <option>None</option>
                    <option>Passive Ability</option>
                    <option>Active Ability</option>
                    <option>One-Time Ability</option>
                </select>
                <textarea
                    placeholder="Describe the ability"
                    class="w-full mt-2 px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
                ></textarea>
            </div>
        </div>
    </div>

    <!-- Attack Section -->
    <div id="attacks-section" class="mb-4">
        <label class="block text-sm font-medium mb-2">Attacks</label>
        <div class="space-y-4">
            <div>
                <textarea
                    placeholder="Describe the attack, its effects, and type"
                    class="w-full px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
                ></textarea>
            </div>
        </div>
    </div>

    <!-- Weakness -->
    <div class="mb-4">
        <label class="block text-sm font-medium mb-2">Weakness</label>
        <div class="flex gap-4">
            <input
                type="number"
                placeholder="Damage increase"
                class="w-1/2 px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
            />
            <select
                class="w-1/2 px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
            >
                <option>Gaslighting</option>
                <option>PsychOps</option>
                <option>Catfish</option>
                <option>Goon</option>
                <option>Roast</option>
            </select>
        </div>
    </div>

    <!-- Resist -->
    <div class="mb-4">
        <label class="block text-sm font-medium mb-2">Resist</label>
        <div class="flex gap-4">
            <input
                type="number"
                placeholder="Damage reduction"
                class="w-1/2 px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
            />
            <select
                class="w-1/2 px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
            >
                <option>Gaslighting</option>
                <option>PsychOps</option>
                <option>Catfish</option>
                <option>Goon</option>
                <option>Roast</option>
            </select>
        </div>
    </div>

    <!-- Rarity -->
    <div class="mb-4">
        <label class="block text-sm font-medium mb-2">Rarity</label>
        <select
            class="w-full px-4 py-2 border rounded-lg focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
        >
            <option>Common</option>
            <option>Rare</option>
            <option>Ultra Rare</option>
        </select>
    </div>

    <!-- HP -->
    <div class="mb-4">
        <label class="block text-sm font-medium mb-2">HP</label>
        <input
            type="number"
            placeholder="Enter HP value"
            class="w-full px-4 py-2 border rounded-lg focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:text-gray-200"
        />
    </div>

    <!-- Download Buttons -->
    <div class="flex justify-between mt-6">
        <button
            class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 focus:outline-none"
            onclick="downloadCardImage()"
        >
            Download Card Image
        </button>
        <button
            class="px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 focus:outline-none"
            onclick="downloadCardData()"
        >
            Download Card Data (JSON)
        </button>
    </div>
</div>

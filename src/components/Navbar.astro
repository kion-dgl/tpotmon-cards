---
// Define props with TypeScript interface
interface Props {
    title: string;
    createLink: string;
}

// Destructure props with default values
const { title = "Tpotmon", createLink = "/create" } = Astro.props;
---

<nav class="bg-white shadow-md dark:bg-gray-800">
    <div class="container flex items-center justify-between py-4 mx-auto px-4">
        <div class="text-lg font-bold">{title}</div>
        <a 
            href={createLink}
            class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700 transition-colors"
        >
            Create
        </a>
    </div>
</nav>